<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="150dp"
                                                   android:layout_height="150dp"
                                                   android:paddingTop="10dp">


    <ImageView
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="102dp"
            android:layout_height="97dp" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/app_name"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" tools:text="Facebook" android:textStyle="bold"
            android:layout_marginStart="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/app_rating"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_name" tools:text="4.3" android:layout_marginStart="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>